<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_add_address"
        app:cardCornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/grey_opacity60_primary"
        android:backgroundTint="#4B413A"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_button_custom_bg"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/img_card"
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:cardCornerRadius="9dp">
                <ImageView
                    android:id="@+id/item_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.card.MaterialCardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/tv_order_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="@font/raleway_regular"
                    android:text="Black Tea"
                    android:textColor="@color/text_color_2"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/tv_order_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_regular"
                    android:text="@string/quantity"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_order_item_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_item_name">

                </TextView>

                <TextView
                    android:id="@+id/oder_item_quantity_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="5"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_order_item_quantity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_order_item_quantity"
                    app:layout_constraintTop_toTopOf="@+id/tv_order_item_quantity">

                </TextView>

                <TextView
                    android:id="@+id/tv_order_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_regular"
                    android:text="@string/size"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_order_item_quantity"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_item_quantity">

                </TextView>

                <TextView
                    android:id="@+id/oder_item_size_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="M"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_order_item_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_order_item_size"
                    app:layout_constraintTop_toTopOf="@+id/tv_order_item_size">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/oder_item_price"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="3"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical"
                android:text="@string/product_price"
                android:textColor="@color/text_color"
                android:textAlignment="textEnd"
                android:textSize="11sp">

            </TextView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>