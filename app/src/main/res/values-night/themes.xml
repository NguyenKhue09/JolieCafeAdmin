<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JolieCafeAdmin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_primary</item>
        <item name="colorPrimaryVariant">@color/grey_primary_variant</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground">@color/grey_primary</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/text_color</item>
    </style>


    <style name="switchColor">
        <item name="colorControlActivated">@color/text_color_2</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSurface">@color/grey_opacity60_primary</item>
        <item name="hintTextColor">@color/text_color</item>
    </style>

    <style name="DropDownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/checkable_color</item>
        <item name="rippleColor">@color/grey_primary</item>
        <item name="endIconMode">none</item>
    </style>

    <style name="RegularText" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="RegularText2" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallText" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BigText" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="RegularNumber" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="RegularNumber2" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallNumber" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BigNumber" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:tint">@color/text_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/text_color</item>
    </style>

    <style name="Button.Rounded" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/grey_secondary</item>
        <item name="iconTint">@color/grey_primary</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_color_2</item>
        <item name="backgroundTint">@color/text_color</item>
        <item name="cornerRadius">@dimen/large_corner_radius</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="backgroundTint">@color/text_color_2</item>
        <item name="cornerRadius">@dimen/large_corner_radius</item>
    </style>

</resources>