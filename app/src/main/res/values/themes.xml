<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JolieCafeAdmin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_primary</item>
        <item name="colorPrimaryVariant">@color/grey_primary_variant</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground">@color/grey_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="switchColor">
        <item name="colorControlActivated">@color/text_color_2</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="RegularText" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="RegularText2" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallText" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BigText" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="RegularNumber" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="RegularNumber2" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallNumber" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BigNumber" parent="Theme.JolieCafeAdmin">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>